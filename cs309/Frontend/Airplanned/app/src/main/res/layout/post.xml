<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

<!--    <ImageView-->
<!--        android:id="@+id/post_image"-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:background="@color/white"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/worldwide" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#1A385A"
        app:srcCompat="@android:drawable/divider_horizontal_textfield"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/post_publisher"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="User:"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/btn_pg_likeImage"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="60dp"
            android:visibility="visible"
            tools:srcCompat="@drawable/heart" />


        <TextView
            android:id="@+id/tv_pg_likeCounter"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text=" 0 "
            android:textSize="25dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/post_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Date:  "
        android:textAlignment="viewEnd"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/post_comments_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="..."
        android:scrollbars="vertical"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_pg_commentInput"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:hint="comment"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btn_pg_commentAdd"
            android:layout_width="138dp"
            android:backgroundTint="#1A385A"
            android:layout_height="wrap_content"
            android:text="comment" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_pg_delete"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:text="delete"
        android:backgroundTint="#990000"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name = ".model.GlobalVariables"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Airplanned"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.ProfilePageActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FriendListPageActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ChatPageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ArchivedPostPageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddingTripActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PostPageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.TripPlannedList"
            android:exported="true" />
        <activity
            android:name=".activity.LodgingPageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.FlightPageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RegisterPageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.HomePageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LoginPageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>